<h1><%= link_to("Admin", "../admin") %> > Adjective List</h1>

<p><%= link_to("Create New Adjective", {:action => 'new'}, :class => 'new-link') %></p>

<% if !flash[:notice].blank? %>
<div class="notice">
	<%= flash[:notice] %>
</div>
<% end %>

<table cellpadding="5" cellspacing="5">
	
<% @adjectives.each do |adjective| %>
	<tr>
		<td><%= adjective.id %></td>
		<td><%= adjective.adjective %></td>
		<td><%= link_to("Show", {:action => 'show', :id => adjective.id}, :class => 'action show') %></td>
		<td><%= link_to("Edit", {:action => 'edit', :id => adjective.id}, :class => 'action edit') %></td>
		<td><%= link_to("Delete", {:action => 'delete', :id => adjective.id}, :class => 'action delete') %></td>
	</tr>
<% end %>

</table>